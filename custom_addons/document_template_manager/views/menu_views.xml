<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Main Menu -->
    <menuitem id="menu_document_main" 
              name="Documents" 
              web_icon="document_template_manager,static/description/icon.png"
              sequence="85"
              groups="document_template_manager.group_document_user,document_template_manager.group_document_manager"/>
    
    <!-- Document Submenus -->
    <menuitem id="menu_document_all" 
              name="All Documents" 
              parent="menu_document_main" 
              action="action_document_template" 
              sequence="10"
              groups="document_template_manager.group_document_user,document_template_manager.group_document_manager"/>
    
    <menuitem id="menu_document_my" 
