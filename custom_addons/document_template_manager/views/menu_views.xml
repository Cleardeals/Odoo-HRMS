              parent="menu_document_main" 
              action="action_document_favorites" 
              sequence="30"
              groups="document_template_manager.group_document_user,document_template_manager.group_document_manager"/>
    
    <!-- Configuration Menu -->
    <menuitem id="menu_document_config" 
              name="Configuration" 
              parent="menu_document_main" 
              sequence="100"
              groups="document_template_manager.group_document_manager"/>
    
    <menuitem id="menu_document_categories" 
              name="Categories" 
              parent="menu_document_config" 
              action="action_document_category" 
              sequence="10"
              groups="document_template_manager.group_document_manager"/>
    
    <menuitem id="menu_document_tags" 
              name="Tags" 
              parent="menu_document_config" 
              action="action_document_tag" 
