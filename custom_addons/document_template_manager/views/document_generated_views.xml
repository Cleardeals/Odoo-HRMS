<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Document Generated Tree View -->
    <record id="view_document_generated_tree" model="ir.ui.view">
        <field name="name">document.generated.tree</field>
        <field name="model">document.generated</field>
        <field name="arch" type="xml">
            <list string="Generated Documents" decoration-muted="state == 'archived'" 
                  decoration-success="state == 'final'" decoration-info="state == 'draft'">
                <field name="name"/>
                <field name="template_type"/>
                <field name="res_name"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'final'" 
                       decoration-info="state == 'draft'"
                       decoration-muted="state == 'archived'"/>
                <field name="generated_date"/>
                <field name="generated_by"/>
                <field name="version"/>
                <field name="has_pdf" widget="boolean_toggle"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>
    
    <!-- Document Generated Form View -->
    <record id="view_document_generated_form" model="ir.ui.view">
        <field name="name">document.generated.form</field>
        <field name="model">document.generated</field>
        <field name="arch" type="xml">
            <form string="Generated Document">
                <header>
                    <button name="action_generate_pdf" string="Generate PDF" 
                            type="object" class="oe_highlight"
                            invisible="has_pdf"/>
                    <button name="action_download_pdf" string="Download PDF" 
                            type="object" class="oe_highlight"
                            invisible="not has_pdf"/>
                    <button name="action_preview" string="Preview" 
                            type="object"/>
                    <button name="action_duplicate" string="Duplicate" 
                            type="object"/>
                    <button name="action_send_email" string="Send by Email" 
                            type="object"/>
                    <button name="action_mark_as_final" string="Mark as Final" 
                            type="object" 
                            invisible="state != 'draft'"
                            class="oe_highlight"/>
                    <button name="action_mark_as_draft" string="Mark as Draft" 
                            type="object" 
                            invisible="state != 'final'"/>
                    <button name="action_archive_document" string="Archive" 
                            type="object" 
                            invisible="state == 'archived'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,final"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" 
                                name="action_view_versions" 
                                icon="fa-code-fork"
                                invisible="version_count == 0">
                            <field string="Versions" name="version_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" 
                                name="action_open_related_record" 
                                icon="fa-external-link"
                                invisible="not res_model or not res_id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Open</span>
                                <span class="o_stat_text">Record</span>
                            </div>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" 
                            invisible="state != 'archived'"/>
                    <widget name="web_ribbon" title="Final" bg_color="text-bg-success" 
                            invisible="state != 'final'"/>
                    
                    <div class="oe_title">
                        <label for="name" string="Document Name"/>
                        <h1>
                            <field name="name" placeholder="e.g., Contract - Acme Corp"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="template_id" options="{'no_create': True}"/>
                            <field name="template_type"/>
                            <field name="res_model" invisible="1"/>
                            <field name="res_id" invisible="1"/>
                            <field name="res_name" string="Related Record"/>
                        </group>
                        <group>
                            <field name="generated_date"/>
                            <field name="generated_by"/>
                            <field name="version"/>
                            <field name="parent_document_id" 
                                   invisible="not parent_document_id"/>
                            <field name="company_id" groups="base.group_multi_company" 
                                   options="{'no_create': True}"/>
                        </group>
                    </group>
                    
                    <group string="PDF Information" invisible="not has_pdf">
                        <field name="has_pdf" invisible="1"/>
                        <field name="pdf_filename"/>
                        <field name="pdf_file" filename="pdf_filename" widget="binary"/>
                    </group>
                    
                    <notebook>
                        <page string="Document Content" name="content">
                            <field name="html_content" widget="html" 
                                   options="{'style-inline': true, 'resizable': true, 'height': 600}"
                                   placeholder="Document content will appear here..."/>
                        </page>
                        
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Internal notes about this document..."/>
                        </page>
                        
                        <page string="Versions" name="versions" 
                              invisible="version_count == 0">
                            <field name="version_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="version"/>
                                    <field name="state"/>
                                    <field name="create_date"/>
                                    <field name="create_uid"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Document Generated Kanban View -->
    <record id="view_document_generated_kanban" model="ir.ui.view">
        <field name="name">document.generated.kanban</field>
        <field name="model">document.generated</field>
        <field name="arch" type="xml">
            <kanban string="Generated Documents">
                <field name="id"/>
                <field name="name"/>
                <field name="template_type"/>
                <field name="state"/>
                <field name="has_pdf"/>
                <field name="generated_date"/>
                <field name="version"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <i class="fa fa-file-pdf-o fa-3x" 
                                   t-if="record.has_pdf.raw_value"
                                   style="color: #d9534f;"/>
                                <i class="fa fa-file-o fa-3x" 
                                   t-else=""
                                   style="color: #666;"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <ul>
                                    <li>Type: <field name="template_type"/></li>
                                    <li>Generated: <field name="generated_date" widget="date"/></li>
                                    <li t-if="record.version.raw_value > 1">Version: <field name="version"/></li>
                                </ul>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge text-bg-success" t-if="record.state.raw_value === 'final'">Final</span>
                                    <span class="badge text-bg-info" t-elif="record.state.raw_value === 'draft'">Draft</span>
                                    <span class="badge text-bg-secondary" t-else="">Archived</span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span class="badge text-bg-primary" t-if="record.has_pdf.raw_value">
                                        <i class="fa fa-file-pdf-o"/> PDF
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Document Generated Search View -->
    <record id="view_document_generated_search" model="ir.ui.view">
        <field name="name">document.generated.search</field>
        <field name="model">document.generated</field>
        <field name="arch" type="xml">
            <search string="Search Documents">
                <field name="name" string="Document"/>
                <field name="template_id"/>
                <field name="res_name"/>
                <field name="generated_by"/>
                
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Final" name="final" domain="[('state', '=', 'final')]"/>
                <filter string="Archived" name="archived" domain="[('state', '=', 'archived')]"/>
                
                <separator/>
                <filter string="Has PDF" name="has_pdf" domain="[('has_pdf', '=', True)]"/>
                <filter string="No PDF" name="no_pdf" domain="[('has_pdf', '=', False)]"/>
                
                <separator/>
                <filter string="My Documents" name="my_documents" 
                        domain="[('generated_by', '=', uid)]"/>
                <filter string="Generated Today" name="today" 
                        domain="[('generated_date', '&gt;=', context_today().strftime('%Y-%m-%d 00:00:00'))]"/>
                <filter string="Generated This Week" name="this_week" 
                        domain="[('generated_date', '&gt;=', (context_today()-relativedelta(weeks=1)).strftime('%Y-%m-%d 00:00:00'))]"/>
                
                <group>
                    <filter string="Status" name="group_state" 
                            context="{'group_by': 'state'}"/>
                    <filter string="Template" name="group_template" 
                            context="{'group_by': 'template_id'}"/>
                    <filter string="Document Type" name="group_type" 
                            context="{'group_by': 'template_type'}"/>
                    <filter string="Generated By" name="group_user" 
                            context="{'group_by': 'generated_by'}"/>
                    <filter string="Generated Date" name="group_date" 
                            context="{'group_by': 'generated_date'}"/>
                    <filter string="Company" name="group_company" 
                            context="{'group_by': 'company_id'}" 
                            groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Document Generated Actions -->
    <record id="action_document_generated" model="ir.actions.act_window">
        <field name="name">Generated Documents</field>
        <field name="res_model">document.generated</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No documents generated yet
            </p>
            <p>
                Generate documents from templates to create professional documents
                with PDF export capabilities.
            </p>
        </field>
    </record>
    
    <record id="action_document_generated_draft" model="ir.actions.act_window">
        <field name="name">Draft Documents</field>
        <field name="res_model">document.generated</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_draft': 1}</field>
        <field name="domain">[('state', '=', 'draft')]</field>
    </record>
    
    <record id="action_document_generated_final" model="ir.actions.act_window">
        <field name="name">Final Documents</field>
        <field name="res_model">document.generated</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_final': 1}</field>
        <field name="domain">[('state', '=', 'final')]</field>
    </record>
    
</odoo>
