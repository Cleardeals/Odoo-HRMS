<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Document Category Tree View -->
    <record id="view_document_category_tree" model="ir.ui.view">
        <field name="name">document.category.tree</field>
        <field name="model">document.category</field>
        <field name="arch" type="xml">
            <list string="Categories">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="document_count"/>
                <field name="color" widget="color_picker"/>
            </list>
        </field>
    </record>

    <!-- Document Category Form View -->
    <record id="view_document_category_form" model="ir.ui.view">
        <field name="name">document.category.form</field>
        <field name="model">document.category</field>
        <field name="arch" type="xml">
            <form string="Document Category">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="parent_id"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Subcategories" name="subcategories">
                            <field name="child_ids">
                                <list>
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="document_count"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Document Category Action -->
    <record id="action_document_category" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">document.category</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first category
            </p>
            <p>
                Organize your documents with categories and subcategories.
            </p>
        </field>
    </record>

</odoo>
