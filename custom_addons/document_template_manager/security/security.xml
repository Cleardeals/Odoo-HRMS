<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Security Groups -->
        <record id="group_document_user" model="res.groups">
            <field name="name">Document User</field>
            <field name="comment">User can create and edit their own documents</field>
        </record>
        
        <record id="group_document_manager" model="res.groups">
            <field name="name">Document Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_document_user'))]"/>
            <field name="comment">Manager can manage all documents, categories, and tags</field>
        </record>
        
        <!-- Multi-Company Record Rules -->
        <record id="document_template_comp_rule" model="ir.rule">
            <field name="name">Document: multi-company</field>
            <field name="model_id" ref="model_document_template"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
        
        <!-- User Access Rules - Users can edit their own documents -->
        <record id="document_template_user_rule" model="ir.rule">
            <field name="name">Document: Users can manage their own documents</field>
            <field name="model_id" ref="model_document_template"/>
            <field name="domain_force">['|', ('create_uid', '=', user.id), ('active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_document_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <record id="document_template_user_write_rule" model="ir.rule">
            <field name="name">Document: Users can edit their own documents</field>
            <field name="model_id" ref="model_document_template"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_document_user'))]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Manager Access Rules - Full access to all documents -->
        <record id="document_template_manager_rule" model="ir.rule">
            <field name="name">Document: Manager can manage all documents</field>
            <field name="model_id" ref="model_document_template"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_document_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
    </data>
</odoo>
