<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- ═══════════════════════════════════════════════════════
             SECURITY GROUPS
             ═══════════════════════════════════════════════════════ -->

        <record id="group_document_user" model="res.groups">
            <field name="name">Document User</field>
            <field name="comment">Can create and manage own templates</field>
        </record>

        <record id="group_document_manager" model="res.groups">
            <field name="name">Document Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_document_user'))]"/>
            <field name="comment">Full access to all templates, categories and tags</field>
        </record>

        <!-- ═══════════════════════════════════════════════════════
             RECORD RULES — document.template
             ═══════════════════════════════════════════════════════ -->

        <!-- Multi-company -->
        <record id="document_template_comp_rule" model="ir.rule">
            <field name="name">Template: multi-company</field>
            <field name="model_id" ref="model_document_template"/>
            <field name="domain_force">[
                '|',
                ('company_id', '=', False),
                ('company_id', 'in', company_ids),
            ]</field>
        </record>

        <!-- Users: read all active + CRUD own -->
        <record id="document_template_user_read_rule" model="ir.rule">
            <field name="name">Template: users read active</field>
            <field name="model_id" ref="model_document_template"/>
            <field name="domain_force">[
                '|',
                ('create_uid', '=', user.id),
                ('active', '=', True),
            ]</field>
            <field name="groups" eval="[(4, ref('group_document_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="document_template_user_write_rule" model="ir.rule">
            <field name="name">Template: users edit own</field>
            <field name="model_id" ref="model_document_template"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_document_user'))]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Manager: full access -->
        <record id="document_template_manager_rule" model="ir.rule">
            <field name="name">Template: manager full access</field>
            <field name="model_id" ref="model_document_template"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_document_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- ═══════════════════════════════════════════════════════
             RECORD RULES — document.template.variable
             ═══════════════════════════════════════════════════════ -->

        <record id="document_variable_comp_rule" model="ir.rule">
            <field name="name">Variable: multi-company (via template)</field>
            <field name="model_id" ref="model_document_template_variable"/>
            <field name="domain_force">[
                '|',
                ('template_id.company_id', '=', False),
                ('template_id.company_id', 'in', company_ids),
            ]</field>
        </record>

    </data>
</odoo>
