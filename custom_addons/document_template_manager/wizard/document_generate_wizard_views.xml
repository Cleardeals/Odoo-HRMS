<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Document Generate Wizard Form View -->
    <record id="view_document_generate_wizard_form" model="ir.ui.view">
        <field name="name">document.generate.wizard.form</field>
        <field name="model">document.generate.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Document">
                <group>
                    <group>
                        <field name="template_id" 
                               options="{'no_create': True, 'no_open': True}"/>
                        <field name="model_id" invisible="1"/>
                        <field name="model_name" invisible="1"/>
                    </group>
                    <group>
                        <field name="document_name"/>
                    </group>
                </group>
                
                <group>
                    <group>
                        <field name="record_selection_method" widget="radio"/>
                    </group>
                    <group>
                        <field name="res_id" 
                               invisible="record_selection_method == 'current'"/>
                        <field name="res_name" readonly="1"
                               invisible="not res_id"/>
                    </group>
                </group>
                
                <group string="Options">
                    <group>
                        <field name="generate_pdf"/>
                        <field name="mark_as_final"/>
                    </group>
                </group>
                
                <notebook>
                    <page string="Preview" name="preview">
                        <field name="preview_html" widget="html" 
                               readonly="1"
                               options="{'style-inline': true, 'height': 400}"/>
                    </page>
                </notebook>
                
                <footer>
                    <button string="Generate Document" name="action_generate_document" 
                            type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Wizard Action -->
    <record id="action_document_generate_wizard" model="ir.actions.act_window">
        <field name="name">Generate Document</field>
        <field name="res_model">document.generate.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
</odoo>
