<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ════════════════════════════════════════════════════════════════
         EXPORT WIZARD
         ════════════════════════════════════════════════════════════════ -->

    <record id="view_document_export_wizard_form" model="ir.ui.view">
        <field name="name">document.export.wizard.form</field>
        <field name="model">document.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export PDF">
                <!-- Helper banner -->
                <div class="alert alert-info mb-3" role="alert">
                    <strong><i class="fa fa-info-circle"/> Export as PDF</strong>
                    <br/>
                    Fill in the values for each variable below, then click
                    <strong>Generate PDF</strong> to download your document
                    with all placeholders replaced.
                </div>

                <group>
                    <field name="template_id" invisible="1"/>
                    <field name="template_name" string="Template"/>
                </group>

                <notebook>
                    <!-- Tab 1 – Variables -->
                    <page string="Fill in Variables" name="variables"
                          icon="fa-pencil-square-o">
                        <field name="line_ids" nolabel="1">
                            <list editable="bottom" create="false" delete="false">
                                <field name="label" readonly="1" string="Field"
                                       decoration-bf="1"/>
                                <field name="value_char" string="Value"
                                       placeholder="Enter value…"/>
                                <field name="is_required" column_invisible="1"/>
                                <field name="variable_type" column_invisible="1"/>
                                <field name="name" column_invisible="1"/>
                                <field name="selection_options" column_invisible="1"/>
                                <field name="sequence" column_invisible="1"/>
                            </list>
                        </field>
                    </page>

                    <!-- Tab 2 – Live Preview -->
                    <page string="Preview" name="preview" icon="fa-eye">
                        <field name="preview_html" widget="html" readonly="1"
                               options="{'style-inline': true}"/>
                    </page>
                </notebook>

                <footer>
                    <button string="Generate PDF"
                            name="action_generate_pdf"
                            type="object"
                            class="btn-primary"
                            icon="fa-file-pdf-o"/>
                    <button string="Cancel" special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
