<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Sample Template: Contract Template -->
        <record id="template_sample_contract" model="document.template">
            <field name="name">Sales Contract Template</field>
            <field name="template_type">contract</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="description">Sample sales contract template for partners</field>
            <field name="html_content"><![CDATA[
                <div style="font-family: Arial, sans-serif; padding: 20px; max-width: 800px; margin: 0 auto;">
                    <div style="text-align: center; margin-bottom: 30px;">
                        <h1 style="color: #333; margin-bottom: 10px;">SALES CONTRACT</h1>
                        <p style="color: #666;">Contract No.: ${object.id}</p>
                    </div>
                    
                    <div style="margin-bottom: 20px;">
                        <p><strong>Date:</strong> ${today}</p>
                    </div>
                    
                    <div style="margin-bottom: 30px;">
                        <h3 style="color: #444; border-bottom: 2px solid #333; padding-bottom: 5px;">Parties</h3>
                        <table style="width: 100%; margin-top: 15px;">
                            <tr>
                                <td style="width: 50%; vertical-align: top;">
                                    <p><strong>Company:</strong></p>
                                    <p>${company.name}<br/>
                                    ${company.street or ''}<br/>
                                    ${company.city or ''}, ${company.state_id.name or ''}<br/>
                                    ${company.zip or ''}<br/>
                                    Email: ${company.email or ''}<br/>
                                    Phone: ${company.phone or ''}</p>
                                </td>
                                <td style="width: 50%; vertical-align: top;">
                                    <p><strong>Client:</strong></p>
                                    <p>${object.name}<br/>
                                    ${object.street or ''}<br/>
                                    ${object.city or ''}, ${object.state_id.name or ''}<br/>
                                    ${object.zip or ''}<br/>
                                    Email: ${object.email or ''}<br/>
                                    Phone: ${object.phone or ''}</p>
                                </td>
                            </tr>
                        </table>
                    </div>
                    
                    <div style="margin-bottom: 30px;">
                        <h3 style="color: #444; border-bottom: 2px solid #333; padding-bottom: 5px;">Terms and Conditions</h3>
                        <p style="text-align: justify; line-height: 1.6; margin-top: 15px;">
                            This Sales Contract ("Contract") is entered into as of ${today} by and between 
                            ${company.name} ("Seller") and ${object.name} ("Buyer").
                        </p>
                        
                        <p style="text-align: justify; line-height: 1.6;">
                            <strong>1. Agreement:</strong> The Seller agrees to sell and the Buyer agrees to 
                            purchase the goods/services as specified in the attached quotation or purchase order.
                        </p>
                        
                        <p style="text-align: justify; line-height: 1.6;">
                            <strong>2. Payment Terms:</strong> Payment shall be made according to the terms 
                            specified in the quotation. All payments are due within 30 days of invoice date.
                        </p>
                        
                        <p style="text-align: justify; line-height: 1.6;">
                            <strong>3. Delivery:</strong> The Seller shall deliver the goods/services to the 
                            address specified by the Buyer within the agreed timeframe.
                        </p>
                        
                        <p style="text-align: justify; line-height: 1.6;">
                            <strong>4. Warranty:</strong> The Seller warrants that all goods/services provided 
                            shall be of merchantable quality and fit for their intended purpose.
                        </p>
                    </div>
                    
                    <div style="margin-top: 50px;">
                        <table style="width: 100%;">
                            <tr>
                                <td style="width: 50%; padding-top: 50px; border-top: 1px solid #333;">
                                    <p><strong>Seller Signature</strong></p>
                                    <p>${company.name}</p>
                                </td>
                                <td style="width: 50%; padding-top: 50px; border-top: 1px solid #333;">
                                    <p><strong>Buyer Signature</strong></p>
                                    <p>${object.name}</p>
                                </td>
                            </tr>
                        </table>
                    </div>
                    
                    <div style="margin-top: 30px; text-align: center; color: #666; font-size: 12px;">
                        <p>This is a legally binding document. Please read carefully before signing.</p>
                    </div>
                </div>
            ]]></field>
        </record>
        
        <!-- Sample Template: Letter Template -->
        <record id="template_sample_letter" model="document.template">
            <field name="name">Welcome Letter Template</field>
            <field name="template_type">letter</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="description">Sample welcome letter template for new partners</field>
            <field name="html_content"><![CDATA[
                <div style="font-family: Arial, sans-serif; padding: 20px; max-width: 700px; margin: 0 auto;">
                    <div style="text-align: right; margin-bottom: 30px;">
                        <img src="/logo.png" alt="${company.name}" style="max-height: 80px;"/>
                    </div>
                    
                    <div style="margin-bottom: 20px;">
                        <p>${today}</p>
                    </div>
                    
                    <div style="margin-bottom: 30px;">
                        <p>${object.name}<br/>
                        ${object.street or ''}<br/>
                        ${object.city or ''}, ${object.state_id.name or ''} ${object.zip or ''}</p>
                    </div>
                    
                    <div style="margin-bottom: 20px;">
                        <p><strong>Dear ${object.name},</strong></p>
                    </div>
                    
                    <div style="margin-bottom: 20px; text-align: justify; line-height: 1.6;">
                        <p>
                            On behalf of ${company.name}, I would like to extend a warm welcome to you as our new partner.
                            We are thrilled to have you join our growing family of valued clients.
                        </p>
                        
                        <p>
                            At ${company.name}, we pride ourselves on delivering exceptional products and services. 
                            Our team is committed to ensuring your complete satisfaction and building a long-lasting 
                            business relationship with you.
                        </p>
                        
                        <p>
                            Your dedicated account manager will be in touch shortly to discuss how we can best serve 
                            your needs. In the meantime, please don't hesitate to reach out if you have any questions.
                        </p>
                        
                        <p>
                            We look forward to a successful partnership!
                        </p>
                    </div>
                    
                    <div style="margin-top: 40px;">
                        <p>Sincerely,</p>
                        <p style="margin-top: 40px;"><strong>${user.name}</strong><br/>
                        ${user.function or 'Sales Representative'}<br/>
                        ${company.name}</p>
                    </div>
                    
                    <div style="margin-top: 50px; padding-top: 20px; border-top: 1px solid #ddd; text-align: center; color: #666; font-size: 12px;">
                        <p>${company.name} | ${company.street or ''} | ${company.phone or ''} | ${company.email or ''}</p>
                    </div>
                </div>
            ]]></field>
        </record>
        
        <!-- Sample Template: Invoice Template -->
        <record id="template_sample_invoice" model="document.template">
            <field name="name">Invoice Document Template</field>
            <field name="template_type">invoice</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="description">Sample invoice template</field>
            <field name="html_content"><![CDATA[
                <div style="font-family: Arial, sans-serif; padding: 20px; max-width: 800px; margin: 0 auto;">
                    <div style="margin-bottom: 30px;">
                        <table style="width: 100%;">
                            <tr>
                                <td style="width: 50%;">
                                    <h1 style="color: #333; margin: 0;">INVOICE</h1>
                                </td>
                                <td style="width: 50%; text-align: right;">
                                    <img src="/logo.png" alt="${company.name}" style="max-height: 60px;"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                    
                    <div style="margin-bottom: 30px;">
                        <table style="width: 100%;">
                            <tr>
                                <td style="width: 50%; vertical-align: top;">
                                    <p><strong>From:</strong></p>
                                    <p>${company.name}<br/>
                                    ${company.street or ''}<br/>
                                    ${company.city or ''}, ${company.state_id.name or ''}<br/>
                                    ${company.zip or ''}</p>
                                </td>
                                <td style="width: 50%; vertical-align: top; text-align: right;">
                                    <p><strong>Bill To:</strong></p>
                                    <p>${object.name}<br/>
                                    ${object.street or ''}<br/>
                                    ${object.city or ''}, ${object.state_id.name or ''}<br/>
                                    ${object.zip or ''}</p>
                                </td>
                            </tr>
                        </table>
                    </div>
                    
                    <div style="margin-bottom: 20px;">
                        <table style="width: 100%;">
                            <tr>
                                <td><strong>Invoice Date:</strong> ${today}</td>
                                <td style="text-align: right;"><strong>Invoice #:</strong> INV-${object.id}</td>
                            </tr>
                        </table>
                    </div>
                    
                    <div style="margin-bottom: 30px;">
                        <table style="width: 100%; border-collapse: collapse;">
                            <thead>
                                <tr style="background-color: #f5f5f5;">
                                    <th style="border: 1px solid #ddd; padding: 10px; text-align: left;">Description</th>
                                    <th style="border: 1px solid #ddd; padding: 10px; text-align: center;">Quantity</th>
                                    <th style="border: 1px solid #ddd; padding: 10px; text-align: right;">Unit Price</th>
                                    <th style="border: 1px solid #ddd; padding: 10px; text-align: right;">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="border: 1px solid #ddd; padding: 10px;">Sample Item</td>
                                    <td style="border: 1px solid #ddd; padding: 10px; text-align: center;">1</td>
                                    <td style="border: 1px solid #ddd; padding: 10px; text-align: right;">$0.00</td>
                                    <td style="border: 1px solid #ddd; padding: 10px; text-align: right;">$0.00</td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" style="border: 1px solid #ddd; padding: 10px; text-align: right;"><strong>Total:</strong></td>
                                    <td style="border: 1px solid #ddd; padding: 10px; text-align: right;"><strong>$0.00</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    
                    <div style="margin-top: 40px; padding: 15px; background-color: #f9f9f9; border-left: 4px solid #333;">
                        <p style="margin: 0;"><strong>Payment Terms:</strong> Due within 30 days</p>
                        <p style="margin: 5px 0 0 0;">Please make payment to: ${company.name}</p>
                    </div>
                    
                    <div style="margin-top: 30px; text-align: center; color: #666; font-size: 12px;">
                        <p>Thank you for your business!</p>
                    </div>
                </div>
            ]]></field>
        </record>
        
    </data>
</odoo>
