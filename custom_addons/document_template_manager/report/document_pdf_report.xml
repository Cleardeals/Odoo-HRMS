<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ═══════════════════════════════════════════════════════════
         PDF REPORT — QWeb template for document.template
         ═══════════════════════════════════════════════════════════ -->

    <template id="report_document_template_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <t t-out="doc.html_content"/>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Report action (Print → Document PDF in form view) -->
    <record id="action_report_document_template_pdf" model="ir.actions.report">
        <field name="name">Print Template</field>
        <field name="model">document.template</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">document_template_manager.report_document_template_pdf</field>
        <field name="report_file">document_template_manager.report_document_template_pdf</field>
        <field name="print_report_name">'%s' % (object.name)</field>
        <field name="binding_model_id" ref="model_document_template"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
